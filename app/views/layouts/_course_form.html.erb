<div class="row">
    <form class="col s12">
    <%= form_for @course do |f| %>
      <div class="row">
        <div class="input-field col s4">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>
        <div class="input-field col s4">
          <%= f.label :deparment %>
          <%= f.text_field :deparment %>
        </div>
        <div class="input-field col s4">
          <%= f.label :credits %>
          <%= f.text_field :credits %>
        </div>
      </div>
      <button class="btn waves-effect waves-light" type="submit" name="action">
        <i class="material-icons"><%= f.submit %></i>
      </button>
    <% end %>
  </form>
</div>